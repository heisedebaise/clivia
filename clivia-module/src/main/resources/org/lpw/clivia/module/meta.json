{
    "key": "clivia.module",
    "uri": "/module/",
    "props": [
        {
            "name": "code"
        },
        {
            "name": "name"
        },
        {
            "name": "execute",
            "values": [
                "query",
                "save",
                "delete",
                "user"
            ],
            "multiple": true
        },
        {
            "name": "columns",
            "type": "array",
            "children": [
                {
                    "name": "name",
                    "label": ".column.name"
                },
                {
                    "name": "type",
                    "label": ".column.type",
                    "values": [
                        "id",
                        "string",
                        "int",
                        "text",
                        "date",
                        "datetime"
                    ]
                },
                {
                    "name": "key",
                    "label": ".column.key",
                    "labels": ".column.keys"
                },
                {
                    "name": "require",
                    "label": ".column.require",
                    "labels": ".column.requires"
                }
            ]
        }
    ],
    "query": {
        "type": "grid",
        "ops": [
            {
                "type": "modify"
            },
            {
                "type": "delete"
            }
        ],
        "toolbar": [
            {
                "type": "create"
            }
        ]
    },
    "create": {
        "type": "form",
        "toolbar": [
            {
                "service": "save",
                "success": "query"
            }
        ]
    },
    "modify": {
        "type": "form",
        "toolbar": [
            {
                "service": "save",
                "success": "query"
            }
        ]
    }
}
